{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "build-sqlite",
            "command": "gcc",
            "args": [
                "-g",
                "-DHAVE_READLINE",
                "-DSQLITE_ENABLE_FTS4",
                "-DSQLITE_ENABLE_RTREE",
                "-DSQLITE_ENABLE_EXPLAIN_COMMENTS",
                "-o",
                "sqlite3",
                "shell.c",
                "sqlite3.c",
                "-lreadline",
                "-ldl",
                "-lpthread"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}